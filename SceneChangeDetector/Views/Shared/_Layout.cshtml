<!DOCTYPE html>
<html>
<head>
    <script type="text/javascript">
        $('#button123').click(function () {
            var input = document.getElementById("searchTxt");
            document.location = '../Home/Search?search=123' + input;
    });
    </script>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Online Scene Detector</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Scene Detector", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Upload Video", "RegisterVideo", "Home")</li>

                    <li style="margin-top:9px;margin-left:5px">
                        <input id="searchTxt" type="text" class="form-control" placeholder="Search">
                    </li>

                    <li style="margin-top:9px;margin-left:5px"><button id="button123" type="submit" class="btn btn-default" onclick="window.location.href = 'http://localhost:50694/Home/Search?search=' + document.getElementById('searchTxt').value;">Submit</button></li>



                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Online Scene Detector</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
